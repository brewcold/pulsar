<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hammer.pulsar.dao.LikeDao">

    <!--  게시글의 추천수를 조회하는 SQL  -->
    <select id="selectLikes" parameterType="int" resultType="int">

    </select>

    <!--  회원의 게시글 추천 여부를 조회하는 SQL  -->
    <select id="selectLikeByMemberId" parameterType="LikeRequest" resultType="boolean">
        SELECT EXISTS(
            SELECT
                *
            FROM TB_LIKE
            WHERE
                ARTICLE_ID = #{articleId}
                MEMBER_ID = #{memberId}
        )
    </select>

    <!--  회원이 추천한 게시글 목록을 조회하는 SQL  -->
    <select id="selectLikedByMemberId" parameterType="int" resultType="ArticlePreview">
        SELECT
            A.*
        FROM TB_LIKE L
        INNER JOIN TB_ARTICLE A
        ON
            L.ARTICLE_ID = A.ID
        WHERE
            MEMBER_ID = #{memberID}
    </select>

    <!--  추천 내역을 추가하는 SQL  -->
    <insert id="insertLike" parameterType="LikeRequest">
        INSERT INTO TB_LIKE
        VALUES (#{articleId}, #{memberId})
    </insert>

    <!--  추천 내역을 삭제하는 SQL  -->
    <delete id="deleteLike" parameterType="LikeRequest">
        DELETE FROM TB_LIKE
        WHERE
            ARTICLE_ID = #{articleId}
        AND MEMBER_ID = #{memberId}
    </delete>

</mapper>