<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hammer.pulsar.dao.MemberDao">

    <!--  회원가입을 위한 SQL  -->
    <insert id="insertMember" parameterType="MemberRegistRequest">
        INSERT INTO TB_MEMBER (EMAIL, PASSWORD, NICKNAME, SRC)
        VALUES (#{email}, #{password}, #{nickname}, #{profileImg})
    </insert>

    <!--  이메일 중복 검사를 위한 SQL  -->
    <select id="findEmail" parameterType="string" resultType="boolean">
        SELECT NOT EXISTS(
            SELECT
                *
            FROM TB_MEMBER
            WHERE
                EMAIL = #{email}
        ) as is_duplicated
    </select>

    <!-- 닉네임 중복 검사를 위한 SQL-->
    <select id="findNickname" parameterType="string" resultType="boolean">
        SELECT NOT EXISTS(
            SELECT
                *
            FROM TB_MEMBER
            WHERE
                NICKNAME = #{nickname}
        ) as is_duplicated
    </select>

    <!--  회원의 세부 정보 조회를 위한 SQL  -->
    <select id="selectMemberByMemberId" parameterType="int" resultType="Member">
        SELECT
            *
        FROM TB_MEMBER
        WHERE
            ID = #{memberId}
    </select>

    <!--  회원 정보 수정을 위한 SQL  -->
<!--    <update id="updateMember" parameterType="MemberModifyRequest">-->
<!--        UPDATE -->
<!--    </update>-->

    <!--  회원 탈퇴를 위한 SQL  -->
    <delete id="deleteMember" parameterType="int">
        DELETE FROM TB_MEMBER
        WHERE
            ID = #{memberId}
    </delete>

</mapper>